<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res-auto"
    android:title=" "
    settings:keywords="@string/keywords_android_version">

    <com.android.settingslib.widget.LayoutPreference
        android:key="about_elixir"
        settings:controller="com.android.settings.deviceinfo.firmwareversion.ElixirLogoPreferenceController"
        android:layout="@layout/about_elixir"
        android:selectable="true" />

    <Preference
        android:key="xd_build_status"
        android:title="@string/xd_build_status"
        android:summary="@string/xd_summary_placeholder"
        android:icon="@drawable/xd_build"
        settings:controller="com.android.settings.deviceinfo.firmwareversion.BuildMaintainerPreferenceController"
        settings:layout="@layout/xd_pref_card_sin-accent"/>

    <PreferenceCategory
	android:layout="@layout/custom_preference_category2"
        android:title="@string/android_info">

    <!-- Android version -->
    <Preference
        android:key="os_firmware_version"
        android:title="@string/firmware_version"
	settings:layout="@layout/xd_pref_card_top"    
	android:summary="@string/summary_placeholder"
        settings:enableCopying="true"
        settings:searchable="false"
        settings:controller="com.android.settings.deviceinfo.firmwareversion.FirmwareVersionDetailPreferenceController"/>

    <!-- Security patch -->
    <Preference
	android:key="security_key"
	settings:layout="@layout/xd_pref_card_bot"
        android:title="@string/security_patch"
        settings:enableCopying="true"
        settings:controller="com.android.settings.deviceinfo.firmwareversion.SecurityPatchLevelPreferenceController"/>

    <!-- Mainline module version -->
    <Preference
        android:key="module_version"
        android:title="@string/module_version"
        android:summary="@string/summary_placeholder"
        settings:enableCopying="true"
        settings:controller="com.android.settings.deviceinfo.firmwareversion.MainlineModuleVersionPreferenceController"/>

    </PreferenceCategory>

    <PreferenceCategory
        android:layout="@layout/custom_preference_category2"
        android:title="@string/elixir_info">

    <!-- Elixir Version  -->
    <Preference
        android:key="Elixir_version"
	settings:layout="@layout/xd_pref_card_top"    
	android:title="@string/Elixir_version"
        android:summary="@string/summary_placeholder"
        settings:enableCopying="true"
        settings:controller="com.android.settings.deviceinfo.firmwareversion.ElixirVersionPreferenceController"/>

    <!-- Elixir Maintainer  -->
    <Preference
        android:key="Elixir_maintainer"
        android:title="@string/Elixir_maintainer"
	settings:layout="@layout/xd_pref_card_mid"    
	android:summary="@string/summary_placeholder"
        settings:enableCopying="true"
        settings:controller="com.android.settings.deviceinfo.firmwareversion.ElixirMaintainerPreferenceController"/>

    <!-- SELinux -->
    <Preference
	android:key="selinux_status"
	settings:layout="@layout/xd_pref_card_bot"
        android:title="@string/selinux_status"
        android:summary="@string/summary_placeholder"
        settings:enableCopying="false"
        settings:controller="com.android.settings.deviceinfo.firmwareversion.SelinuxStatusPreferenceController"/>

    </PreferenceCategory>

    <PreferenceCategory
        android:layout="@layout/custom_preference_category2"
        android:title="@string/deviceinfo">

    <!-- Device name -->
    <Preference
	android:key="about_device_name"
	settings:layout="@layout/xd_pref_card_top"
        android:title="@string/about_device_name"
        android:summary="@string/summary_placeholder"
        settings:enableCopying="true"
        settings:controller="com.android.settings.deviceinfo.firmwareversion.AboutDeviceNamePreferenceController"/>

    <!-- Baseband -->
    <Preference
        android:key="base_band"
        android:title="@string/baseband_version"
        android:summary="@string/summary_placeholder"
        settings:layout="@layout/xd_pref_card_mid"
        settings:enableCopying="true"
	settings:controller="com.android.settings.deviceinfo.firmwareversion.BasebandVersionPreferenceController"/>

    <!-- Kernel -->
    <Preference
        android:key="kernel_version"
	android:title="@string/kernel_version"
	settings:layout="@layout/xd_pref_card_mid"
        android:summary="@string/summary_placeholder"
        settings:enableCopying="true"
        settings:controller="com.android.settings.deviceinfo.firmwareversion.KernelVersionPreferenceController"/>

    <!-- Build date -->
    <Preference
        android:key="os_build_date"
        android:title="@string/build_date"
        android:summary="@string/summary_placeholder"
	settings:layout="@layout/xd_pref_card_bot"    
	settings:enableCopying="true"
        settings:controller="com.android.settings.deviceinfo.firmwareversion.CustomBuildDatePreferenceController"/>

    <!-- Build Number -->
    <!--Preference
        android:key="os_build_number"
        android:title="@string/build_number"
        android:summary="@string/summary_placeholder"
        android:selectable="false"
        settings:enableCopying="true"
        settings:controller="com.android.settings.deviceinfo.firmwareversion.SimpleBuildNumberPreferenceController"/> -->
   </PreferenceCategory>
</PreferenceScreen>
